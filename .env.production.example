# Database — change STRONG_PASSWORD to a real password
DATABASE_URL=postgres://sacuser:STRONG_PASSWORD@postgres:5432/sachapel?sslmode=disable
POSTGRES_DB=sachapel
POSTGRES_USER=sacuser
